<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.base" />

    <style name="AppTheme.base" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@color/actionMenuTextColor</item>
        <item name="android:textColorSecondary">@color/actionMenuTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="s_true" parent="@style/TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/colorGreen_1</item>
    </style>

    <style name="s_false" parent="@style/TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@color/colorGray_2</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/DP_20</item>
    </style>

</resources>
